<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/item_order_manage_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text3"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/order_manage_type1"
            >
            <ImageView
                android:id="@+id/item_order_manage_status"
                android:layout_width="112dp"
                android:layout_height="88dp"
                android:layout_gravity="right|bottom"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/item_order_manage_desk1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="桌台号："
                        android:textColor="@color/text3"
                        android:textSize="@dimen/sp_15"/>
                    <TextView
                        android:id="@+id/item_order_manage_desk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/text2"
                        android:textSize="@dimen/sp_18"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/item_order_manage_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/text3"
                    android:textSize="@dimen/sp_15"/>
                <TextView
                    android:id="@+id/item_order_manage_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/text4"
                    android:textSize="@dimen/sp_15"
                    android:gravity="center"/>
            </LinearLayout>
                <TextView
                    android:id="@+id/item_order_manage_order_num"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/text4"
                    android:textSize="@dimen/sp_15"/>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>



</LinearLayout>