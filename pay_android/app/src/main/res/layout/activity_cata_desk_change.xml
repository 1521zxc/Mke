<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.epay.activity.CataDeskChangeActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#325dc0">

        <ImageView style="@style/title_img" />

        <TextView
            style="@style/title_text"
            android:layout_weight="1"
            android:text="菜品换桌" />

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="fill_parent"
            android:layout_gravity="right" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cata_deskNO"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text3" />

            <ListView
                android:id="@+id/cata_h_listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/text3" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cata_h_deskNO"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:text=""
                android:textColor="@color/text3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/text3" />

            <ListView
                android:id="@+id/cata_h_listView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text3" />

    <TextView
        android:id="@+id/cata_h_que"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_36"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/corner_appcolor"
        android:gravity="center"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:text="确认换菜"
        android:textColor="@color/textColor_white" />
</LinearLayout>
