<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.epay.activity.MemberStoredActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/appHeaderColor">

        <ImageView style="@style/title_img" />

        <TextView
            style="@style/title_text"
            android:layout_weight="1"
            android:text="会员储值" />

        <TextView
            android:id="@+id/stored_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_17.5"
            android:layout_marginRight="@dimen/dp_17.5"
            android:text="账单"
            android:textColor="@color/textColor_white" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/appHeaderColor2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stored_allmoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/textColor_white" />

        <TextView
            android:id="@+id/stored_symoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/textColor_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stored_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center">

        <ImageView
            android:id="@+id/stored_img1"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40" />

        <ImageView
            android:id="@+id/stored_img2"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5" />

        <ImageView
            android:id="@+id/stored_img3"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5" />

        <ImageView
            android:id="@+id/stored_img4"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5" />

        <ImageView
            android:id="@+id/stored_img5"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="全部储值会员>" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_8"
        android:background="@color/bg_grey" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/textColor_grey"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="2018.10.12-12-11"
            android:textColor="@color/textColor_white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="已结束"
            android:textColor="@color/textColor_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/me_item_text40"
            android:gravity="center_vertical|left"
            android:text="储值会员" />

        <TextView
            android:id="@+id/stored_p"
            style="@style/me_item_text40"
            android:background="@drawable/bg_layout"
            android:gravity="center_vertical|right"
            android:text="0人>"
            android:textColorHint="@color/textColor_grey" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/me_item_text40"
            android:gravity="center_vertical|left"
            android:text="储值金额" />

        <TextView
            android:id="@+id/stored_money"
            style="@style/me_item_text40"
            android:background="@drawable/bg_layout"
            android:gravity="center_vertical|right"
            android:text="0元>"
            android:textColorHint="@color/textColor_grey" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/me_item_text40"
            android:gravity="center_vertical|left"
            android:text="累计交易笔数" />

        <TextView
            android:id="@+id/stored_allsum"
            style="@style/me_item_text40"
            android:background="@drawable/bg_layout"
            android:gravity="center_vertical|right"
            android:text="2笔"
            android:textColorHint="@color/textColor_grey" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/me_item_text40"
            android:gravity="center_vertical|left"
            android:text="平均消费金额" />

        <TextView
            android:id="@+id/stored_amoney"
            style="@style/me_item_text40"
            android:background="@drawable/bg_layout"
            android:gravity="center_vertical|right"
            android:text="0.22元"
            android:textColorHint="@color/textColor_grey" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ddd" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            style="@style/me_item_text40"
            android:gravity="center_vertical|left"
            android:text="累计消费金额" />

        <TextView
            android:id="@+id/stored_allmoney1"
            style="@style/me_item_text40"
            android:background="@drawable/bg_layout"
            android:gravity="center_vertical|right"
            android:text="0.54元"
            android:textColorHint="@color/textColor_grey" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#ddd" />

    <TextView
        android:id="@+id/stored_activity"
        style="@style/me_item_text40"
        android:gravity="center"
        android:text="查看活动详情>"
        android:textColor="@color/appHeaderColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/action_su"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="bottom"
        android:background="#fb5c5c"
        android:gravity="center"
        android:text="立即续费"
        android:textColor="@color/textColor_white" />
</LinearLayout>
