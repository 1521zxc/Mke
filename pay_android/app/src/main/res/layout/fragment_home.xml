<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/title_text"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:text="首页" />
    <FrameLayout
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/ic_me_home"
            />
    </FrameLayout>
</RelativeLayout>
    <com.example.epay.view.HeadZoomLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:headViewId="@id/home_linear">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textColor_white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/home_linear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_170"
                    android:background="@drawable/banner"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/home_pay"
                        android:layout_width="@dimen/dp_110"
                        android:layout_height="@dimen/dp_110"
                        android:src="@drawable/gathering" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/type_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:background="@color/textColor_white"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/type0"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/textColor_white"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:text="查看流水"
                        android:textSize="@dimen/sp_16" />

                    <Button
                        android:id="@+id/type1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/textColor_white"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_20"
                        android:text="划款记录"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/bg_grey" />

                <GridView
                    android:id="@+id/home_gridView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_180"
                    android:background="@color/textColor_white"
                    android:numColumns="4"></GridView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/bg_grey"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="交易金额0.00元"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="交易笔数0笔"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </com.example.epay.view.HeadZoomLayout>
</LinearLayout>