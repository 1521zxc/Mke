<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_white"
    android:gravity="center"
    android:padding="@dimen/dp_20"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/appHeaderColor"
        android:text="服务升级提示"/>
    <TextView
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="1.购买高级会员服务后，新服务立即生效（有效期12个月）"/>
    <TextView
        android:layout_width="@dimen/dp_240"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:text="2.正在享有基本服务的商户升级需补齐差价"/>
    <TextView
        android:id="@+id/dialog_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColor_white"
        android:background="@drawable/corner_blue"
        android:layout_marginTop="@dimen/dp_40"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:text="了解并继续"/>

</LinearLayout>