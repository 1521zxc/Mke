<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appHeaderColor">

        <ImageView style="@style/title_img" />

        <TextView
            style="@style/title_text"
            android:layout_weight="1"
            android:text="会员储值" />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/personal_fl_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_ll_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="55dp"
            android:text="微信"
            android:textColor="#000000"
            android:gravity="end|center"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/personal_fl_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_ll_background">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="55dp"
            android:text="支付宝"
            android:textColor="#000000"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/personal_fl_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/personal_ll_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginLeft="55dp"
            android:text="现金"
            android:textColor="#000000"/>

    </FrameLayout>

</LinearLayout>