<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.epay.activity.MembersActivity"
    android:orientation="vertical">
    <FrameLayout android:background="@color/appHeaderColor" android:layout_height="@dimen/dp_60" android:layout_width="fill_parent">

        <ImageView  style="@style/title_img"/>

        <TextView android:text="会员管理" style="@style/title_text"  android:layout_weight="1"/>

        <ImageView
            android:id="@+id/member_code"
            android:layout_height="@dimen/dp_25"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_17.5"
            android:layout_marginRight="@dimen/dp_17.5"
            android:layout_gravity="right"
            android:visibility="invisible"
            android:src="@drawable/ic_gather"/>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:background="@color/appHeaderColor"
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:visibility="gone"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_weight="1"
            android:text="免费体验已结束"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:background="@drawable/corner_white"
            android:textColor="@color/appHeaderColor"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="正式开通"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#dcdcdc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:orientation="horizontal"
        android:background="@color/textColor_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日新增(人)"/>
            <TextView
                android:id="@+id/member_add"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="30sp"
                android:background="@drawable/rounded_member_background"
                android:textColor="@color/textColor_white"
                android:text="0"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部(人)"/>
            <TextView
                android:id="@+id/member_total"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="30sp"
                android:background="@drawable/rounded_member_background2"
                android:textColor="@color/textColor_white"
                android:text="0"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="#dcdcdc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/textColor_white"
        android:layout_marginTop="@dimen/dp_20"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="排序"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:layout_weight="1"
            android:gravity="center"/>

    </LinearLayout>
        <com.example.epay.view.PxListViewForScroll
            android:id="@+id/member_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@android:color/transparent"
            android:divider="#0000"
            android:dividerHeight="1px">
        </com.example.epay.view.PxListViewForScroll>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:text="未开通会员服务，仅可显示10个会员信息"/>

        <TextView
            android:id="@+id/kt_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/corner_blue"
        android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_20"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/textColor_white"
            android:visibility="gone"
        android:text="立即开通会员"/>

        <ImageView
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:scaleType="fitEnd"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@drawable/poke"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
