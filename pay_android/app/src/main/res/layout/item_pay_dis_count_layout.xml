<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="20dp"
    >
    <LinearLayout
        android:id="@+id/conpone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/conpone_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/appHeaderColor3"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="全场通用"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_16"
                android:layout_marginTop="3dp"/>
            <TextView
                android:id="@+id/conpone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="老北京炸酱面10元神券"
                android:textColor="@color/text2"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/conpone_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[满100减30][有效期至08.20]"
                android:textColor="@color/text3"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
   <TextView
       android:id="@+id/no_conpone_text"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:text="不使用优惠券"
       android:gravity="center"/>
</LinearLayout>