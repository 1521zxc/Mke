<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_member_ship_detail_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_member_ship_detail_type"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/text3"
            android:text=""/>
        <TextView
            android:id="@+id/item_member_ship_detail_type2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text4"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/dp_20"
            android:text=""
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_member_ship_detail_price"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textColor="@color/text3"
            android:text=""/>
        <TextView
            android:id="@+id/item_member_ship_detail_price2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/text4"
            android:text=""
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_member_ship_detail_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text3"
        android:text=""/>
</LinearLayout>