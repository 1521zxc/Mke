<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.epay.activity.MembershipCertificationActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/appHeaderColor">

        <ImageView style="@style/title_img" />

        <TextView
            style="@style/title_text"
            android:layout_weight="1"
            android:text="会员认证" />

        <ImageView
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_17.5"
            android:layout_marginRight="@dimen/dp_17.5" />
    </FrameLayout>

    <EditText
        android:id="@+id/rz_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/corner_white_small" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/rz_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/appHeaderColor"
        android:gravity="center"
        android:text="认证"
        android:textColor="@color/textColor_white"
        android:textSize="@dimen/sp_16" />
</LinearLayout>
