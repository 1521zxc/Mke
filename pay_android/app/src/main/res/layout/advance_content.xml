<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="高级服务权益"
        android:gravity="center"
        android:background="#fff"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_20"
        android:padding="@dimen/dp_10"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:padding="@dimen/dp_10"
        android:background="#fff"

        android:orientation="horizontal">
        <TextView
            android:id="@+id/clude_service_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:text="支付收款"
            android:drawableTop="@drawable/service_pay"/>
        <TextView
            android:id="@+id/clude_service_bas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:text="会员基础功能"
            android:drawableTop="@drawable/service_bas"/>
        <TextView
            android:id="@+id/clude_service_cz"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:text="会员储值"
            android:drawableTop="@drawable/service_cz"/>
        <TextView
            android:id="@+id/clude_service_noti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:text="关注公众号"
            android:drawableTop="@drawable/service_noti"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:padding="@dimen/dp_10"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/clude_service_push"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:text="消息推送"
            android:drawableTop="@drawable/service_push"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>