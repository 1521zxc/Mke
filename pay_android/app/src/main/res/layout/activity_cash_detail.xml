<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.epay.activity.CashDetailActivity"
    android:orientation="vertical">
    <FrameLayout android:background="@color/appHeaderColor" android:layout_height="wrap_content" android:layout_width="fill_parent">

        <ImageView style="@style/title_img"/>

        <TextView android:text="交易流水" style="@style/title_text"  android:layout_weight="1"/>

        <ImageView android:layout_height="fill_parent" android:layout_width="@dimen/dp_60" android:layout_gravity="right"/>

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <LinearLayout
        android:id="@+id/cash_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cash_detail_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            />
        <TextView
            android:id="@+id/cash_detail_name"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
            <TextView  android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text="基本信息"/>

            <LinearLayout
                android:orientation="horizontal" android:layout_height="@dimen/dp_60" android:layout_width="fill_parent" >

                <TextView  android:id="@+id/cash_detail_co_state" android:text="微信收款"   android:gravity="center_vertical|left"  style="@style/me_item_text_left"/>

                <TextView
                    style="@style/me_item_text" android:id="@+id/cash_detail_co_money" android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>


            <LinearLayout  android:orientation="horizontal" android:layout_height="@dimen/dp_60" android:layout_width="fill_parent">

                <TextView android:text="应收金额"  android:gravity="center_vertical|left" style="@style/me_item_text_left"/>

                <TextView  style="@style/me_item_text" android:id="@+id/cash_detail_money" android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>

            <LinearLayout  android:orientation="horizontal" android:gravity="center"
                android:layout_height="@dimen/dp_60" android:layout_width="fill_parent">

                <TextView android:text="支付确认码"  android:gravity="center_vertical|left"
                    style="@style/me_item_text_left"/>

                <TextView  android:id="@+id/cash_detail_co_ok" style="@style/me_item_text"  android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>

            <LinearLayout
                android:orientation="horizontal" android:layout_height="@dimen/dp_60" android:layout_width="fill_parent" >

                <TextView android:text="交易状态"   android:gravity="center_vertical|left"  style="@style/me_item_text_left"/>

                <TextView
                    android:id="@+id/cash_detail_state"   style="@style/me_item_text" android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>


            <LinearLayout  android:orientation="horizontal" android:layout_height="@dimen/dp_60" android:layout_width="fill_parent">

                <TextView android:text="交易时间"  android:gravity="center_vertical|left" style="@style/me_item_text_left"/>

                <TextView  android:id="@+id/cash_detail_time" style="@style/me_item_text" android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>

            <LinearLayout  android:orientation="horizontal" android:gravity="center"
                android:layout_height="@dimen/dp_60" android:layout_width="fill_parent">

                <TextView android:text="交易号"  android:gravity="center_vertical|left"
                    style="@style/me_item_text_left"/>

                <TextView android:id="@+id/cash_detail_number"  style="@style/me_item_text"  android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>


            <LinearLayout
                android:orientation="horizontal" android:layout_height="@dimen/dp_60" android:layout_width="fill_parent" >

                <TextView android:text="门店"   android:gravity="center_vertical|left"  style="@style/me_item_text_left"/>

                <TextView
                    style="@style/me_item_text" android:id="@+id/cash_detail_address" android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>


            <LinearLayout  android:orientation="horizontal" android:layout_height="@dimen/dp_60" android:layout_width="fill_parent">

                <TextView android:text="操作账号"  android:gravity="center_vertical|left" style="@style/me_item_text_left"/>

                <TextView style="@style/me_item_text" android:id="@+id/cash_detail_ac" android:gravity="center_vertical|right" android:text="" />

            </LinearLayout>

            <TextView android:background="#ddd" android:layout_height="1px" android:layout_width="fill_parent" android:text=""/>

        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/cash_detail_tui"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:textColor="@color/textColor_white"
        android:background="#fb5c5c"
        android:gravity="center"
        android:textSize="@dimen/sp_20"
        android:visibility="gone"
        android:text="退款"/>
</LinearLayout>
