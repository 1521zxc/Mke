<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.epay.activity.CataHActivity">
    <FrameLayout android:background="#325dc0" android:layout_height="wrap_content" android:layout_width="fill_parent">

        <ImageView style="@style/title_img"/>

        <TextView android:text="换菜" style="@style/title_text"  android:layout_weight="1"/>

        <ImageView android:layout_height="fill_parent" android:layout_width="@dimen/dp_50" android:layout_gravity="right"/>

    </FrameLayout>
        <TextView
            android:id="@+id/cata_h_type"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:textColor="@color/text3"
            android:text="全部类型"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
            <ListView
                android:id="@+id/cata_h_listView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </ListView>
            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/text3"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ListView
                android:id="@+id/cata_h_listView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text3"/>
        <TextView
            android:id="@+id/cata_h_que"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_10"
            android:text="确认换菜"
            android:textColor="@color/textColor_white"
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/corner_appcolor"/>
</LinearLayout>
