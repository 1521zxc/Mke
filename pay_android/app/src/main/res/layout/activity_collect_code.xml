<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.epay.activity.CollectCodeActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/appHeaderColor">

        <ImageView style="@style/title_img" />

        <TextView
            android:id="@+id/code_title"
            style="@style/title_text"
            android:layout_weight="1"
            android:text="支付宝收款" />

        <TextView
            android:id="@+id/qie"
            android:layout_width="@dimen/dp_60"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="切换"
            android:textColor="@color/textColor_white"
            android:visibility="invisible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_40"
        android:background="@drawable/corner_white_stroke"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">

        <ImageView
            android:id="@+id/or_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/code_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请使用支付宝扫一扫付款" />

        <TextView
            android:id="@+id/code_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#fb5c5c"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/collect_code_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:background="@color/appHeaderColor"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/dp_30"
        android:visibility="gone">

        <TextView
            android:id="@+id/collect_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_gathering"
            android:drawablePadding="@dimen/dp_30"
            android:gravity="center"
            android:text="扫码收款"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>