<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dip"
    android:layout_height="fill_parent"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:id="@+id/link_dialog_layout"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="@color/textColor_white"
        android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/dismiss"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="@string/cancel"
                android:gravity="left|center_vertical"
                android:textSize="@dimen/sp_15"
                android:paddingLeft="20dp"
                android:textColor="@color/appHeaderColor3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:text="店铺"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/background_floating_material_dark"/>
            <TextView
                android:id="@+id/ofcuess"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="确定"
                android:gravity="right|center_vertical"
                android:textSize="@dimen/sp_12"
                android:paddingRight="20dp"
                android:textColor="@color/appHeaderColor3"/>
        </LinearLayout>

    <com.example.epay.view.ScrollerNumberPicker
        android:id="@+id/scroll_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        su:itemNumber="3"
        su:lineColor="#ffffffff"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="@dimen/sp_13"
        su:selecredTextColor="#ff000000"
        su:selecredTextSize="@dimen/sp_15"
        su:unitHight="50dp"/>
</LinearLayout>