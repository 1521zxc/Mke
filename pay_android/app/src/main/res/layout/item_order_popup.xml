<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_5">
    <TextView
        android:id="@+id/item_order_popup_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/item_order_popup_reduct"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/cata_reduct"/>
    <TextView
        android:id="@+id/item_order_popup_num"
        android:layout_width="@dimen/dp_25"
        android:layout_height="match_parent"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/item_order_popup_add"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"
        android:background="@drawable/cata_add"/>
</LinearLayout>