<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/scan_bg"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView1">
    <SurfaceView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/surfaceView1"/>

    <!-- 扫描框上面的布局 -->
    <FrameLayout  android:id="@+id/scan_top1" android:background="@color/appHeaderColor" android:layout_height="wrap_content" android:layout_width="fill_parent">

        <ImageView style="@style/title_img" />

        <TextView  android:id="@+id/qr_code_title" android:text="扫描识别会员" style="@style/title_text"  android:layout_weight="1"/>

        <ImageView android:id="@+id/scan_light1" android:src="@drawable/light_btn" android:layout_height="@dimen/dp_25"
            android:layout_width="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_17.5"
            android:layout_marginRight="@dimen/dp_17.5"
            android:layout_gravity="right"
            />

    </FrameLayout>

    <TextView  android:background="@color/scan_bg"  android:layout_below="@id/scan_top1" android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center" android:id="@+id/top_mask" android:singleLine="false" android:text="请扫描会员二维码识别会员\n（会员可通过公众号-会员中心查看）" android:paddingTop="@dimen/dp_20" android:paddingBottom="@dimen/dp_20"/>
    <!-- 扫描框底部的布局 -->
    <TextView
        android:id="@+id/code_bottom1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/scan_bg"/>

    <!-- 扫描框中间的布局 -->
    <RelativeLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/top_mask"
        android:layout_above="@id/code_bottom1"
        android:id="@+id/scan_center">

        <ImageView android:background="@color/scan_bg"
            android:layout_height="match_parent"
            android:layout_width="34dp"
            android:id="@+id/iv_left_mask1"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_name"/>

        <ImageView android:background="@color/scan_bg"
            android:layout_height="match_parent"
            android:layout_width="34dp"
            android:id="@+id/iv_right_mask1"
            android:layout_alignParentRight="true"/>


        <RelativeLayout android:background="@android:color/transparent"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/rl_crop_view1"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/iv_left_mask1"
            android:layout_toLeftOf="@id/iv_right_mask1">

            <ImageView
                android:background="@drawable/scanning_line"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/capture_scan_line1"
                android:layout_margin="@dimen/dp_5"
                android:layout_alignParentTop="true"/>

            <!--<com.example.epay.QRCode.defineview.MyImageView-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_width="match_parent"-->
                <!--android:id="@+id/scan_image1"/>-->
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
